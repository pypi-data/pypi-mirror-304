{
  "name": "pyright-to-gitlab-ci",
  "version": "0.1.3",
  "description": "Convert the pyright json output into gitlab-ci codeclimate format report",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ErezAmihud/pyright-to-gitlab-ci.git"
  },
  "keywords": [
    "codeclimate",
    "json",
    "gitlab",
    "ci",
    "ci/cd",
    "pyright",
    "code-climate",
    "code-quality"
  ],
  "author": "Erez Amihud",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/ErezAmihud/pyright-to-gitlab-ci/-/issues"
  },
  "homepage": "https://gitlab.com/ErezAmihud/pyright-to-gitlab-ci",
  "devDependencies": {
    "@tsconfig/node18-strictest": "^1.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/semver": "^7.3.13",
    "@types/semver-utils": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "esbuild": "^0.17.7",
    "eslint": "^8.33.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "release-it": "^15.6.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "gitlab": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "volta": {
    "node": "18.12.1",
    "npm": "9.1.2"
  },
  "dependencies": {
    "ts-command-line-args": "^2.4.2"
  }
}
