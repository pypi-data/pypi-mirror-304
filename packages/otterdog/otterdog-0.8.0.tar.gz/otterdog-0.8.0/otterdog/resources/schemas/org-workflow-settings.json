    "allow_github_owned_actions": { "type": "boolean" },
    "allow_verified_creator_actions": { "type": "boolean" },
    "allow_action_patterns": {
      "type": "array",
      "items": { "type": "string" }
    },
    "enabled_repositories": { "type": "string" },
    "selected_repositories": {
      "type": "array",
      "items": { "type": "string" }
    },
    "default_workflow_permissions": { "type": "string" },
    "actions_can_approve_pull_request_reviews": { "type": "boolean" }
