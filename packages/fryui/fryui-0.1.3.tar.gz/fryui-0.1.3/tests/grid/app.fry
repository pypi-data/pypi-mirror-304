from fryhcs import html, Element
from flask import Flask
from fryui.grid import Grid, HSplit, VSplit, HCenter, VCenter

app = Flask(__name__)

@app.get('/')
def index():
    grid = (
      <div m-10 border-3 border-primary h-90vh text-primary bg-base>
        <HSplit resizable={False}>
          <HSplit>
            <Center>A</Center>
            <Center>B</Center>
            <Center>C</Center>
          </HSplit>
          <VSplit>
            <Center width="150px">A</Center>
            <Center>C</Center>
          </VSplit>
          <Grid columns='1fr 1fr 1fr' rows='1fr 1fr'>
            <Center>A</Center>
            <Center>B</Center>
            <Center>C</Center>
            <Center>D</Center>
            <Center>E</Center>
            <Center>F</Center>
          </Grid>
          <HCenter>
            <div bg-primary-bgx text-primary-t width="3fr">
              这是一个HCenter
            </div>
          </HCenter>
          <VCenter>
            <div bg-primary-bgx text-primary-t height="3fr">
              这是一个VCenter
            </div>
          </VCenter>
        </HSplit>
      </div>)
    return html(grid, title="fryui", autoreload=False)

def Center(children=[]):
    <template>
      <div flex justify-center items-center min-w-150px min-h-0 overflow-hidden>
        {children}
      </div>
    </template>
